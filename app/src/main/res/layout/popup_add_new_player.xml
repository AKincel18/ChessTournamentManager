<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_border"
    tools:context=".activities.AddNewPlayer">


    <TextView
        android:id="@+id/polishRankingTextView"
        android:layout_width="184dp"
        android:layout_height="45dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="20dp"
        android:gravity="left|center"
        android:text="@string/polishRankingTextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/internationalRankingTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/internationalRankingTextView"
        android:layout_width="184dp"
        android:layout_height="45dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="100dp"
        android:gravity="left|center"
        android:text="@string/internationalRankingTextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dateOfBirthTextView"
        android:layout_width="184dp"
        android:layout_height="45dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="28dp"
        android:gravity="left|center"
        android:text="@string/dateOfBirthTextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/polishRankingTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="184dp"
        android:layout_height="45dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="left|center"
        android:text="@string/nameTextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/surnameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857" />

    <TextView
        android:id="@+id/surnameTextView"
        android:layout_width="184dp"
        android:layout_height="42dp"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="16dp"
        android:gravity="left|center"
        android:text="@string/surnameTextView"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/dateOfBirthTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/surnameEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toEndOf="@+id/nameTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753" />

    <EditText
        android:id="@+id/surnameEditText"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/pickDateTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toEndOf="@+id/surnameTextView" />

    <TextView
        android:id="@+id/pickDateTextView"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:gravity="left|center"
        android:text="@string/pickDateTextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/polishRankingNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.167"
        app:layout_constraintStart_toEndOf="@+id/dateOfBirthTextView" />

    <Button
        android:id="@+id/confirmNewPlayerButton"
        android:layout_width="133dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/confirmNewPlayerButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.986" />

    <Button
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/closeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/polishRankingNumber"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/internationalRankingNumber"
        app:layout_constraintStart_toEndOf="@+id/polishRankingTextView" />

    <EditText
        android:id="@+id/internationalRankingNumber"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="100dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/internationalRankingTextView" />

</android.support.constraint.ConstraintLayout>